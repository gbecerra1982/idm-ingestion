# .env-template
# Template de variables de entorno para IDM Ingestion Pipeline
# Copia este archivo a .env y completa los valores según tu entorno

# ================================================================
# RECURSOS DE AZURE
# ================================================================

# ================================
# Azure Key Vault y Storage
# ================================
AZURE_KEY_VAULT_NAME="kv0-randomvalue"
STORAGE_ACCOUNT_NAME="strag0randomvalue"
STORAGE_CONTAINER="documents"
NETWORK_ISOLATION="false"

# ================================
# Azure Document Intelligence
# ================================
AZURE_FORMREC_SERVICE=""
DOCINT_API_VERSION="2023-07-31"

# ================================================================
# CONFIGURACIÓN DE CHUNKING
# ================================================================

NUM_TOKENS="2048"
TOKEN_OVERLAP="100"
MIN_CHUNK_SIZE="100"
SPREADSHEET_NUM_TOKENS="20000"

# ================================================================
# AI FOUNDRY - INFERENCIA CENTRALIZADA
# ================================================================

ENABLE_FOUNDRY="true"
FOUNDRY_ENDPOINT="https://foundry.example.com"
FOUNDRY_API_KEY="your-foundry-api-key"
FOUNDRY_TIMEOUT_SEC="60"
FOUNDRY_MAX_RETRIES="8"

# ================================
# Model Deployments
# ================================
FOUNDRY_CHAT_MODEL_ID="foundry-chat-model"
FOUNDRY_EMBEDDING_MODEL_ID="foundry-embedding-model"
FOUNDRY_VISION_MODEL_ID="foundry-vision-model"

# ================================================================
# AZURE OPENAI (FALLBACK)
# ================================================================

AZURE_OPENAI_SERVICE_NAME=""
AZURE_OPENAI_API_VERSION=""
AZURE_OPENAI_EMBEDDING_DEPLOYMENT=""
AZURE_OPENAI_CHATGPT_DEPLOYMENT=""
AZURE_EMBEDDINGS_VECTOR_SIZE="3072"

# ================================================================
# MISTRAL PIXTRAL OCR
# ================================================================

ENABLE_PIXTRAL_OCR="false"
PIXTRAL_API_URL=""
PIXTRAL_API_KEY=""
PIXTRAL_MODEL_ID=""
PIXTRAL_TIMEOUT_SEC="60"

# ================================
# Content Understanding Service
# ================================
ENABLE_CONTENT_UNDERSTANDING="false"

# ================================================================
# JSON CHUNKING
# ================================================================

ENABLE_JSON_CHUNKER="true"
JSON_MAX_ITEMS_PER_CHUNK="50"
JSON_FLATTEN_DEPTH="3"
JSON_MIN_KEYS_FOR_TABLE="3"
JSON_EXCLUDE_FIELDS=""
JSON_SUMMARIZE="false"

# ================================================================
# AZURE AI SEARCH - INDEXACIÓN DIRECTA
# ================================================================

ENABLE_DIRECT_INDEXING="false"
SEARCH_SERVICE_NAME=""
SEARCH_INDEX_NAME=""
SEARCH_BATCH_SIZE="256"
SEARCH_ANALYZER_NAME="standard"
SEARCH_INDEX_INTERVAL="PT1H"
